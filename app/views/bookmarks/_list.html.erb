<div class="row">
  <% topic.bookmarks.each do |bookmark| %>
  <div class="col-sm-3">
    <div class="well">
      <%= bookmark.url %> <br>
      <%= link_to "Delete Bookmark", bookmark, method: :delete, class: 'btn btn-danger', data: { confirm: "Are you sure you want to delete this bookmark?" } %> <br>
      <%= link_to "Edit Bookmark", edit_bookmark_path(bookmark), class: 'btn btn-info' %>
    </div>
  </div>
  <% end %>
</div>
