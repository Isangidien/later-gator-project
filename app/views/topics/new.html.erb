<h1>New Topic</h1>

<div class="row">
  <div class="col-md-8">
    <%= form_for @topic do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Please Enter Topic title" %>
      </div>

      <div class="form-group">
        <%= f.submit "save", class: 'btn btn-success' %>
      </div>
    <% end %>
     <%= link_to "Back", topics_path, class: 'btn btn-primary' %>
  </div>
</div>
